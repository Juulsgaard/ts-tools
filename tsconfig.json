{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./out",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/tests"]
}
